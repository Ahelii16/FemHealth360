<%- include('partials/header.ejs') %>

<main role="main">
	<div class="container my-5">
		<h1>Period Tracker</h1>
		<p class="subtext text-center">Track your period by clicking on the calendar dates.</p>

		<div class="d-flex align-items-center flex-column">
			<div class="d-flex jutify-content-center">
				<div>Normal <span class="low-flow"></span></div>
				<div>Heavy <span class="heavy-flow"></span></div>
			</div>
			<div id="my-calendar" class="custom-color"></div>
		</div>
	</div>
</main>
<div class="modal" id="periodModal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add Period Flow</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<h3>Period Flow:</h3>
				<div class="d-flex justify-content-center">
					<button type="button" class="btn flow-btn mr-2" style="background-color: #ffb400; color: white" value="low">
						Normal
					</button>
					<button type="button" class="btn flow-btn" style="background-color: #f6511d; color: white" value="high">
						Heavy
					</button>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

<%- include('partials/footer.ejs') %>

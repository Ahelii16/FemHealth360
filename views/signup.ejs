<%- include('partials/header.ejs') %>

<main role="main">
	<div class="container my-5">
		<h1>Signup</h1>
		<%- include('partials/flash.ejs') %>
		<form action="/user/signup" method="POST">
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" class="form-control" id="email" name="email" placeholder="Email" required />
			</div>
			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" class="form-control" id="name" name="name" placeholder="Name" required />
			</div>
			<div class="form-group">
				<label for="name">Password</label>
				<input type="password" class="form-control" id="password" name="password" placeholder="Password" required />
			</div>
			<div class="form-group">
				<label class="control-label" for="dob">Date</label>
				<input class="form-control" id="dob" name="dob" placeholder="YYYY/MM/DD" type="text" autocomplete="off" />
			</div>
			<div class="form-group">
				<label for="diet">What is your preferred diet?</label>
				<select class="form-control" id="diet" name="diet">
					<option value="vegetarian">Vegetarian</option>
					<option value="vegan">Vegan</option>
					<option value="pescetarian">Pescetarian</option>
					<option value="whole30">Whole30</option>
				</select>
			</div>
			<div class="form-group">
				<label>How would you describe your activeness?</label>
				<br />
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="activeness" id="sedentary" value="sedentary" checked />
					<label class="form-check-label" for="sedentary">Sedentary</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="activeness" id="moderate" value="moderate" />
					<label class="form-check-label" for="moderate">Moderate</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="activeness" id="active" value="active" />
					<label class="form-check-label" for="active">Active</label>
				</div>
			</div>
			<div class="form-group">
				<button class="btn btn-primary" type="submit">Submit</button>
			</div>
		</form>
	</div>
</main>

<%- include('partials/footer.ejs') %>
